
<div class="col-lg-8 mx-auto">
  <div class="card shadow">
    <div class="card-header">
      <h1><%= @blog.name %></h1>
    </div>
    <div class="card-body">
      <%= image_tag @blog.image.variant(resize_to_fill: [300, 300]) if @blog.image.attached? %>
      <br>
      <% if @blog.image.attached? %>
        <br>
      <% end %>
      <%= @blog.description %>

      <br>
      <br>
      
      <div class="btn-group">
        <%= button_to "Edit this blog", edit_blog_path(@blog), method: :get, class: "btn btn-primary" %>
        <%= button_to "Destroy this blog", @blog, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>

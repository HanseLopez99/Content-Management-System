<%= form_with(model: content) do |form| %>
  <% if content.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
        <% content.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.rich_text_area :content %>
  </div>

  <div>
    <%= form.label :blog_id, style: "display: block" %>
    <%= form.select :blog_id, @blogs.map { |n| [n.name, n.id] }, { :include_blank => '-- Select One --' }, :required => true %>

    <%= form.label :page_id, style: "display: block" %>
    <%= form.select :page_id, @pages.map { |n| [n.name, n.id] }, { :include_blank => '-- Select One --' }, :required => true %>
  <div>
    <%= form.submit %>
  </div>
<% end %>
